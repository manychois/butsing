{
  "name": "manychois/butsing",
  "autoload": {
    "psr-4": {
      "Manychois\\Butsing\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Siu Pang Tommy Choi",
      "email": "manychois@manychois.com.au"
    }
  ],
  "require": {
    "guzzlehttp/psr7": "^2.6",
    "manychois/php-strong": "dev-main",
    "php-di/slim-bridge": "^3.4",
    "psr/event-dispatcher": "^1.0",
    "slim/slim": "^4.12",
    "twig/twig": "^3.8",
    "ramsey/uuid": "^4.7",
    "psr/http-server-handler": "^1.0"
  },
  "require-dev": {
    "escapestudios/symfony2-coding-standard": "^3.13",
    "phpstan/extension-installer": "^1.3.1",
    "phpstan/phpstan": "^1.11.x-dev",
    "phpstan/phpstan-phpunit": "^1.3.15",
    "phpstan/phpstan-strict-rules": "^1.5.1",
    "phpunit/phpunit": "^10.4.1",
    "slevomat/coding-standard": "^8.14.1",
    "squizlabs/php_codesniffer": "^3.7.2"
  },
  "scripts": {
    "test": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit"
    ],
    "phpcs": "phpcs --standard=phpcs.xml -s",
    "phpcbf": "phpcbf --standard=phpcs.xml || true",
    "phpstan": "phpstan analyse -c phpstan.neon || true",
    "phpstan-watch": "phpstan analyse -c phpstan.neon --watch",
    "code": [
      "@phpcbf",
      "@phpcs",
      "@phpstan"
    ]
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
